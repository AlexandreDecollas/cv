pipeline {
    agent any
    tools {nodejs "node12.22.1"}
    stages {
        stage('install dependencies') {
            steps {
                sh 'yarn install'
            }
        }
        stage('build') {
            steps {
                sh 'yarn build:ssr:prod'
            }
        }
        stage('deploy') {
            steps {
                sh 'mkdir -p /data/cv/staging'
                sh 'cp -r ./dist /data/cv/staging'
            }
        }
    }
}
